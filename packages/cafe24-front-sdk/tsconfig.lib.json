{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "rollup.config.mjs",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ]
}